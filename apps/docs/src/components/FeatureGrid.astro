---
export interface Props {
  title?: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<div class={`feature-grid ${className || ''}`}>
  {title && <h2 class="grid-title">{title}</h2>}
  <div class="grid">
    <slot />
  </div>
</div>

<style>
.feature-grid {
  margin: 3rem 0;
}

.grid-title {
  text-align: center;
  margin-bottom: 2rem;
  font-size: 2rem;
  font-weight: 600;
}

.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  align-items: start;
}

@media (max-width: 768px) {
  .grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
}
</style>