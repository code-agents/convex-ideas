---
import { cn } from "../lib/utils";

export interface Props {
  title: string;
  subtitle: string;
  icon?: string;
  status?: 'concept' | 'active' | 'development' | 'completed' | 'coming-soon';
  category?: string;
  class?: string;
}

const { title, subtitle, icon = "lucide:lightbulb", status = "concept", category, class: className } = Astro.props;

const statusConfig = {
  concept: { variant: 'secondary', text: 'Concept', icon: 'lucide:lightbulb' },
  active: { variant: 'default', text: 'Active', icon: 'lucide:refresh-cw' },
  development: { variant: 'outline', text: 'In Development', icon: 'lucide:wrench' },
  completed: { variant: 'secondary', text: 'Completed', icon: 'lucide:check-circle' },
  'coming-soon': { variant: 'default', text: 'Coming Soon', icon: 'lucide:rocket' }
};
---

<div class={cn(
  "relative p-16 -m-8 mb-12 text-center overflow-hidden",
  className
)}>
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-accent/5 opacity-60"></div>
  <div class="relative z-10 max-w-4xl mx-auto">
    <div class="flex justify-center gap-4 mb-8 flex-wrap">
      {category && (
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium bg-secondary text-secondary-foreground">
          <iconify-icon icon="lucide:tag" width="16" height="16"></iconify-icon>
          {category}
        </div>
      )}
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium bg-primary/10 text-primary border border-primary/20">
        <iconify-icon icon={statusConfig[status].icon} width="16" height="16"></iconify-icon>
        {statusConfig[status].text}
      </div>
    </div>
    
    <div class="mb-8">
      <div class="inline-flex items-center justify-center w-30 h-30 bg-primary text-primary-foreground rounded-3xl mb-8 shadow-xl">
        <iconify-icon icon={icon} width="64" height="64"></iconify-icon>
      </div>
      <h1 class="text-6xl font-bold leading-tight mb-4 bg-gradient-to-br from-primary to-primary/60 bg-clip-text text-transparent">
        {title}
      </h1>
      <p class="text-xl text-muted-foreground leading-relaxed max-w-2xl mx-auto">
        {subtitle}
      </p>
    </div>
    
    <div class="flex justify-center gap-4 flex-wrap">
      <slot name="actions" />
    </div>
  </div>
</div>